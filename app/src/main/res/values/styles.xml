<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:color">@color/colorText</item>
    </style>

    <style name="TextStyleBig">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:color">@color/colorText</item>
    </style>

    <style name="Element">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@color/colorButton</item>
        <item name="android:textColor">@color/colorTextButton</item>
    </style>

    <style name="TextStyleRight">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">250dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:color">@color/colorText</item>
    </style>

</resources>